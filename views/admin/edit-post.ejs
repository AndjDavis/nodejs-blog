<a href="/admin/dashboard">&larr; Back</a>
<div class="admin-title">
	<h2>View/Edit Post</h2>
</div>

<%- include('../forms/_delete-post-form.ejs', { postId: data._id }) %>

<form
	action="/posts/edit-post/<%= data._id %>?_method=PUT"
	method="POST"
>
	<label for="title"><b>Title</b></label>
	<input
		type="text"
		placeholder="Post Title"
		name="title"
		value="<%= data.title %>"
	/>

	<label for="body"><b>Body</b></label>
	<textarea
		name="body"
		cols="50"
		rows="10"
	>
    <%= data.body %>
    </textarea
	>

	<input
		type="submit"
		value="update"
		class="btn"
	/>
</form>
