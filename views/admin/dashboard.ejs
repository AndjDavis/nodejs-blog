<div class="admin-title">
	<h2>Posts</h2>
	<a
		href="/posts/add-post"
		class="button"
		>+ Add New</a
	>
</div>

<% if (data && Array.isArray(data) && data.length) { %>
<ul class="admin-posts">
	<% data.forEach(post => { %>
	<li>
		<a href="/posts/detail/<%= post._id %>"> <%= post.title %> &nearr; </a>
		<div class="admin-post-controls">
			<a
				href="/posts/edit-post/<%= post._id %>"
				class="btn"
				>Edit</a
			>
			<form
				action="/posts/delete-post/<%= post._id %>?_method=DELETE"
				method="POST"
			>
				<input
					type="submit"
					value="Delete"
					class="btn-delete btn"
				/>
			</form>
		</div>
	</li>
	<% }) %>
</ul>
<%} else { %>
<p class="empty_list">There' nothing here, create your first post!</p>
<% } %>
